<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="TourPlanner.MainWindow"
        Title="Tour Planner" Height="450" Width="800">

    <Grid>
        <StackPanel>
            <StackPanel Margin="10" Orientation="Horizontal">

                <TextBox x:Name="txtTourName" Width="150" Height="25" Margin="0 0 10 5" Text="Enter Tour Name" GotFocus="TextBox_GotFocus"/>
                <TextBox x:Name="txtDescription" Width="150" Height="25" Margin="0 0 10 5" Text="Enter Description" GotFocus="TextBox_GotFocus"/>
                <!-- Add other input fields for tour details as needed -->
                <Button Content="Add Tour" Click="AddTour_Click" Width="100" Height="25"/>
            </StackPanel>

			<ListBox x:Name="lstTours" Height="135" Background="White" ItemsSource="{Binding Tours}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<!-- Display tour name -->
							<Expander Header="{Binding Name}" Width="150">
								<!-- Display tour description inside the expander -->
								<StackPanel>
									<TextBlock Text="{Binding Description}"/>
									<!-- Add other properties of the tour as needed -->
								</StackPanel>
							</Expander>
							<!-- Delete button -->
							<Button Content="X" Click="DeleteTour_Click" Margin="5"/>
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>

		</StackPanel>
    </Grid>
</Window>
