<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="TourPlanner.MainWindow"
        Title="Tour Planner" Height="450" Width="800">

    <Grid>
        <StackPanel>
            <StackPanel Margin="10">

                <TextBox x:Name="txtTourName" Width="200" Height="25" Margin="0 0 0 5" Text="Enter Tour Name" GotFocus="TextBox_GotFocus"/>
                <TextBox x:Name="txtDescription" Width="200" Height="25" Margin="0 0 0 5" Text="Enter Description" GotFocus="TextBox_GotFocus"/>
                <!-- Add other input fields for tour details as needed -->
                <Button Content="Add Tour" Click="AddTour_Click" Width="100" Height="30"/>
            </StackPanel>

            <ListBox x:Name="lstTours" Height="136" Background="White" ItemsSource="{Binding Tours}">
                <!-- Define how each tour item should be displayed -->
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <!-- Display tour details here -->
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Description}"/>
                            <!-- Add other properties of the tour as needed -->
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>



            <!-- Ansicht der Tour-Liste -->

        </StackPanel>
    </Grid>
</Window>
